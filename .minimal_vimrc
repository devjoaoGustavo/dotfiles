set nocompatible
filetype off

if has('nvim')
  set runtimepath+=~/.vim runtimepath+=~/.vim/after
  let &packpath = &runtimepath
else
  set t_ZH=[3m
  set t_ZR=[23m
  set t_Co=256
endif

call plug#begin('~/.vim/plugged')
Plug 'wakatime/vim-wakatime'
call plug#end()

filetype plugin indent on
syntax on

set termguicolors

let mapleader=" "

set expandtab
set tabstop=2
