let g:pomodoro_time_work = 30
let g:pomodoro_time_slack = 5

nnoremap gpm :PomodoroStart<cr>
nnoremap gm :PomodoroStatus<cr>
nnoremap gps :PomodoroStop<cr>

function! ShowPomodoroStatus()
  redir => status
  silent exec 'PomodoroStatus'
  redir END
  return status
endfunction
