call plug#end()

packadd! matchit

let b:match_words = '\<if\>:\<end\>,\<do\>:\<end\>,\<def\>:\<end\>'
let g:ale_enabled = 0


filetype plugin indent on
syntax on

set termguicolors
colorscheme jellybeans

hi Comment    cterm=italic guifg=#5C6370 ctermfg=59
hi Normal     ctermbg=NONE guibg=NONE
hi LineNr     ctermbg=NONE guibg=NONE
hi SignColumn ctermbg=NONE guibg=NONE

let mapleader = " "

if !has('nvim')
  set t_ZH=[3m
  set t_ZR=[23m
  set t_Co=256
  set t_ut=
  set belloff=all
  set autoindent
  set fillchars=
  set laststatus=2
else
  autocmd TermOpen * startinsert
  set inccommand=nosplit
endif

set backspace=indent,eol,start
set guicursor=

set clipboard=
set copyindent
set expandtab
set grepprg=rg\ --vimgrep\ $*
set hidden
set ignorecase
set smartcase
set modeline
set modelines=3
set nojoinspaces
" Settings in order to use swap files
set dir=/var/tmp
set swapfile
set updatecount=200
set updatetime=300
set shortmess+=c

set nowritebackup
set nrformats=
set path+=**
set nonumber
set relativenumber
set numberwidth=1
set shiftround
set shiftwidth=2
set showmatch
set signcolumn=auto
set softtabstop=2
set splitbelow
set splitright
set ttimeout timeoutlen=500
set nowrap
set autoread
set autowrite
set showmode
set incsearch
set hlsearch
set showcmd
set list
set listchars=trail:‚àô
set tags^=./.git/tags
